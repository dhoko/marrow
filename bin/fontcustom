#!/bin/sh
fontcustom compile dist/images/svg -o dist/fonts
mv -v dist/fonts/fontcustom.css src/styles/_components/_fontcustom.scss.tmp
rm -fv src/styles/_components/_fontcustom.scss
sed -e "s/url(\"fontcustom/url(\"..\/fonts\/fontcustom/g" src/styles/_components/_fontcustom.scss.tmp > src/styles/_components/_fontcustom.scss
echo '/**\n* WARNING! THIS FILE WAS GENERATED BY FONT CUSTOM (https://github.com/endtwist/fontcustom/).\n* PLEASE DO NOT EDIT IT OR YOU WILL LOSE EVERYTHING.\n*/\n' | cat - src/styles/_components/_fontcustom.scss > src/styles/_components/_fontcustom.scss.tmp
mv -v src/styles/_components/_fontcustom.scss.tmp src/styles/_components/_fontcustom.scss